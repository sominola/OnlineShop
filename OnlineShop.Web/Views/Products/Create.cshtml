@model OnlineShop.Web.ViewModels.Products.CreateProductViewModel
@{
    ViewBag.Title = "Create Product";
}
<style>
       
    </style>

<div class="login-register-area pt-30 pb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 mx-auto col-md-12 ml-auto mr-auto">
                <div class="custom-form-wrapper">
                    <div class="custom-tab-list nav">
                        <a class="active" data-toggle="tab">
                            <h4 class="active">@ViewBag.Title</h4>
                        </a>
                    </div>
                    <div class="custom-form-container">
                        <div class="custom-create-form">
                            <form asp-action="Create" asp-controller="Products" method="post" enctype="multipart/form-data">
                                <div class="validation" asp-validation-summary="ModelOnly"></div>

                                <label asp-for="Name">Name</label>
                                <span asp-validation-for="Name"></span>
                                <input asp-for="Name" type="text" placeholder="Enter Name">

                                <label asp-for="Price">Price</label>
                                <span asp-validation-for="Price"></span>
                                <input asp-for="Price" type="number" placeholder="Enter Price" value="">

                                <label asp-for="Size">Size of product</label>
                                <div class="select-custom">
                                    <select asp-for="Size" asp-items="@Html.GetEnumSelectList<SizeProduct>()"></select>
                                    <svg>
                                        <use xlink:href="#select-arrow-down"></use>
                                    </svg>
                                </div>


                                <label asp-for="Color">Color of product</label>
                                <div class="select-custom">
                                    <select asp-for="Size" asp-items="@Html.GetEnumSelectList<ColorProduct>()"></select>
                                    <svg>
                                        <use xlink:href="#select-arrow-down"></use>
                                    </svg>
                                </div>

                                <label asp-for="Description">Description</label>
                                <span asp-validation-for="Description"></span>
                                <input asp-for="Description" type="text" placeholder="Description">

                                <label asp-for="Files">Files</label>
                                <div id="input-file-wrapper">
                                     <section class="active">
                                         <div class="images d-flex">
                                           <div class="pic">
                                             add
                                           </div>
                                         </div>
                                       </section>
                                </div>
                                <input asp-for="Files" class="custom-file-input" multiple hidden="hidden" accept="image/png, image/gif, image/jpeg">
                                <svg class="sprites">
                                    <symbol id="select-arrow-down" viewbox="0 0 10 6">
                                        <polyline points="1 1 5 5 9 1"></polyline>
                                    </symbol>
                                </svg>


                                <div class="button-box">
                                    <button type="submit">
                                        <span>Create Product</span>
                                    </button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>