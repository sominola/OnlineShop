@model OnlineShop.Web.Models.ViewModels.RegisterViewModel
<div class="login-register-area pt-100 pb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-12 ml-auto mr-auto">
                <div class="login-register-wrapper">
                    <div class="login-register-tab-list nav">
                        <a class="active" data-toggle="tab">
                            <h4> register </h4>
                        </a>
                    </div>
                    <div class="tab-content">
                        <div class="tab-pane active">
                            <div class="login-form-container">
                                <div class="login-register-form">
                                    <form asp-action="Register" asp-controller="Account" method="post">
                                        <div class="validation" asp-validation-summary="ModelOnly"></div>

                                        <span asp-validation-for="Name" class="text-danger"></span>
                                        <input asp-for="Name" type="text" placeholder="Name">

                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                        <input asp-for="LastName" type="text" placeholder="Last Name">

                                        <span asp-validation-for="Login" class="text-danger"></span>
                                        <input asp-for="Login" type="text" placeholder="Login">

                                        <span asp-validation-for="Year" class="text-danger"></span>
                                        <input asp-for="Year" type="text" placeholder="Year">

                                        <span asp-validation-for="Email" class="text-danger"></span>
                                        <input asp-for="Email" type="email" placeholder="Email">

                                        <span asp-validation-for="Password" class="text-danger"></span>
                                        <input asp-for="Password" type="password" placeholder="Password">

                                        <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                                        <input asp-for="PasswordConfirm" type="password" placeholder="Confirm Password">

                                        <div class="button-box">
                                            <button type="submit">
                                                <span>Register</span>
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>