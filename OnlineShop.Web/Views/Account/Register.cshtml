@model OnlineShop.Web.ViewModels.Account.RegisterViewModel
@{
    ViewBag.Title = "Register page";
}
<div class="login-register-area pt-100 pb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-12  mx-auto">
                <div class="login-register-wrapper">
                    <div class="login-register-tab-list nav">
                        <a class="active" data-toggle="tab">
                            <h4> register </h4>
                        </a>
                    </div>
                    <div class="tab-content">
                        <div class="tab-pane active">
                            <div class="login-form-container">
                                <div class="login-register-form">
                                    <form asp-action="Register" asp-controller="Account" method="post">
                                        <div class="validation" asp-validation-summary="ModelOnly"></div>

                                        <span asp-validation-for="Name" class="text-danger"></span>
                                        <input asp-for="Name" type="text" placeholder="Name">

                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                        <input asp-for="LastName" type="text" placeholder="Last Name">

                                        <span asp-validation-for="Login" class="text-danger"></span>
                                        <input asp-for="Login" type="text" placeholder="Login">

                                        <span asp-validation-for="Email" class="text-danger"></span>
                                        <input asp-for="Email" type="text" placeholder="Email">

                                        <span asp-validation-for="Password" class="text-danger"></span>
                                        <input asp-for="Password" type="password" placeholder="Password">

                                        <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                                        <input asp-for="PasswordConfirm" type="password" placeholder="Confirm Password">

                                        <div class="button-box">
                                            @{
                                                if (Model.ExternalLogins.Any())
                                                {
                                                    <form method="post" asp-action="ExternalLogin" style="display: flex; ">
                                                        <div>
                                                            @{
                                                                var googleProvider = Model.ExternalLogins.ElementAt(0);
                                                                <button type="submit" class="btn btn-outline-dark"
                                                                        name="provider" value="@googleProvider.Name"
                                                                        title="Login using your @googleProvider.DisplayName account">
                                                                    <img width="20px" style="margin-bottom:3px; margin-right:5px" alt="Google sign-in" src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Google_%22G%22_Logo.svg/512px-Google_%22G%22_Logo.svg.png"/>
                                                                    Register with @googleProvider.Name
                                                                </button>
                                                                var facebookProvider = Model.ExternalLogins.ElementAt(1);
                                                                <button type="submit" class="btn btn-outline-dark" style="margin-top: 15px"
                                                                        name="provider" value="@facebookProvider.Name"
                                                                        title="Login using your @facebookProvider.DisplayName account">
                                                                    <img width="20px" style="margin-bottom:3px; margin-right:5px" alt="Google sign-in" src="https://cdn.icon-icons.com/icons2/2108/PNG/512/facebook_icon_130940.png"/>
                                                                    Register with @facebookProvider.Name
                                                                </button>
                                                            }
                                                        </div>
                                                    </form>
                                                }
                                            }
                                            <button type="submit" style="margin-left: auto; max-height: 45px">
                                                <span>Register</span>
                                            </button>
                                        </div>
                                    </form>
                                    <div class="col-md-6 mx-auto">

                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>