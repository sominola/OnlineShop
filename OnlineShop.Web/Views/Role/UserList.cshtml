@model IEnumerable<OnlineShop.Data.Models.User>
@{
    ViewBag.Title = "Role of users";
}
<div class="cart-main-area" style="margin: 75px auto;">
    <div class="container">
        <h3 class="cart-page-title">List of users</h3>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="table-content table-responsive cart-table-content">
                    <table>
                        <thead>
                        <tr>
                            <th>Login</th>
                            <th>Name</th>
                            <th>Last Name</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>

                                <td class="product-name">
                                    <p >@user.Login</p>
                                </td>
                                <td class="product-name">
                                    <p>@user.Name</p>
                                </td>
                                <td class="product-name">
                                    <p>@user.LastName</p>
                                </td>

                                <td class="product-wishlist-cart">
                                    <a asp-action="Edit" asp-controller="Role" asp-route-id="@user.Id">Edit</a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>