@model IEnumerable<OnlineShop.Data.Models.User>
@{
    ViewBag.Title = "List of users";
}
<div class="breadcrumb-area pt-35 pb-35 bg-gray-3">
    <div class="container">
        <div class="breadcrumb-content text-center">
            <ul>
                <li>
                    <a href="@Url.ActionLink("Index", "Home")">Home</a>
                </li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>
</div>
<div class="cart-main-area pt-30 pb-100">
    <div class="container">
        @* <h3 class="cart-page-title">List of users</h3> *@
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="table-content table-responsive cart-table-content">
                    <table>
                        <thead>
                        <tr>
                            <th>Login</th>
                            <th>Name</th>
                            <th>Last Name</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td class="product-name">
                                <a href="#"></a>
                            </td>
                            <td class="product-name">
                                <a href="#"></a>
                            </td>
                            <td class="product-name">
                                <a href="#"></a>
                            </td>

                            <td class="product-wishlist-cart">
                                <a asp-action="Create">New User</a>
                            </td>
                        </tr>
                        @foreach (var user in Model)
                        {
                            <tr>

                                <td class="product-name">
                                    <p>@user.Login</p>
                                </td>
                                <td class="product-name">
                                    <p>@user.Name</p>
                                </td>
                                <td class="product-name">
                                    <p>@user.LastName</p>
                                </td>

                                <td class="product-wishlist-cart">
                                    <a asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>